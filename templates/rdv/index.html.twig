{# templates/rdv/index.html.twig #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}RDV List{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="container mx-auto px-4 py-8">
        {% block body %}
            <h1 class="text-2xl font-bold mb-4">RDV List</h1>

            <table class="min-w-full bg-white border border-gray-200 rounded-lg">
                <thead>
                    <tr class="bg-gray-100">
                        <th scope="col" class="py-2 px-4 border-b font-medium text-gray-700">ID</th>
                        <th scope="col" class="py-2 px-4 border-b font-medium text-gray-700">Date</th>
                        <th scope="col" class="py-2 px-4 border-b font-medium text-gray-700">Patient</th>
                        <!-- Add other columns as needed -->
                        <th scope="col" class="py-2 px-4 border-b font-medium text-gray-700">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for rdv in rdvs %}
                        <tr class="hover:bg-gray-50">
                            <td class="py-2 px-4 border-b text-gray-700">{{ rdv.id }}</td>
                            <td class="py-2 px-4 border-b text-gray-700">{{ rdv.dateRdv|date('Y-m-d') }}</td>
                            <td class="py-2 px-4 border-b text-gray-700">{{ rdv.patient ? rdv.patient.nom ~ ' ' ~ rdv.patient.prenom : 'N/A' }}</td>
                            <!-- Display other properties as needed -->
                            <td class="py-2 px-4 border-b text-gray-700">
                                <a href="{{ path('rdv_edit', {'id': rdv.id}) }}" class="text-blue-500 hover:text-blue-700">Edit</a>
                                <a href="{{ path('rdv_delete', {'id': rdv.id}) }}" class="text-red-500 hover:text-red-700 ml-2">Delete</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('rdv_create') }}" class="mt-4 inline-block bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700">Create RDV</a>
        {% endblock %}
    </div>
</body>
</html>
